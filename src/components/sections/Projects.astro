---
import Section from '../Section.astro';
import { projects } from '../../config/personalInfo';
---
<Section id="projects" title="Projects">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {projects.map(project => (
      <div class="bg-white p-6 rounded-lg shadow-sm border border-content-light">
        <h3 class="text-lg font-semibold text-primary">{project.title}</h3>
        <p class="text-content-medium mt-2">
          {project.description}
        </p>
        <div class="mt-4">
          <a href={project.url} class="text-primary-light hover:text-primary transition-colors">
            {project.customButtonText || 'View Project â†’'}
          </a>
        </div>
      </div>
    ))}
  </div>
</Section>