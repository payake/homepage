---
import Section from '../Section.astro';
import { experiences } from '../../config/personalInfo';
---
<Section id="experience" title="Experience">
  <div class="space-y-8">
    {experiences.map(exp => (
      <div class="bg-white p-6 rounded-lg shadow-sm border border-content-light">
        <h3 class="text-lg font-semibold text-primary">{exp.title}</h3>
        <p class="text-content-medium">{exp.company} â€¢ {exp.period}</p>
        <ul class="mt-4 list-disc list-inside text-content-medium">
          {exp.achievements.map(achievement => (
            <li>{achievement}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</Section>